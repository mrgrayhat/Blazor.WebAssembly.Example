@page "/account/profile/{username?}"

<h3>User Profile</h3>
<hr />

<div class="container">
    <div class="row px-2">

        @if (UserDto is null)
        {
            <div class="loader"></div>
        }
        else
        {
            @if (UserDto.Data is null || UserDto.Succeeded is false)
            {
                <p class="text-center alert alert-danger">User Info Not Found!</p>
            }
            else
            {
                @*<AuthorizeView>
                    <Authorized>

                    </Authorized>
                    <NotAuthorized>*@

                <div class="row">
                    <div class="col-auto">
                        <h2 class="">Nickname: @UserDto.Data.UserName</h2>
                        <h4 class="">Email: @UserDto.Data.Email</h4>
                    </div>
                </div>

                <div class="row">
                    <img class="img img-thumbnail" width="200" height="200" src="@UserDto.Data.Avatar" alt="@($"{UserDto.Data.Avatar} avatar")">
                </div>

                <div class="row mt-4 align-items-center">
                    <div class="col-auto">
                        <small class="">
                            Register: @UserDto.Data.RegisterDate
                        </small>
                    </div>

                    <div class="col-auto">
                        <small class="text-success">
                            Last Activity: @UserDto.Data.LastActivityDate
                        </small>
                    </div>

                    <div class="col-auto">
                        <span class="badge badge-pill badge-info">
                            Followers: @UserDto.Data.Followers
                        </span>
                    </div>

                    <div class="col-auto">
                        <span class="badge badge-pill badge-info">
                            Posts: @UserDto.Data.Posts
                        </span>
                    </div>
                </div>

                <div class="row text-wrap">
                    <p class="text-body">
                        Bio: @UserDto.Data.Bio
                    </p>
                </div>


                @*</NotAuthorized>
                    </AuthorizeView>*@
            }
        }

    </div>
</div>