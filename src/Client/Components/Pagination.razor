<div class="d-flex justify-content-center align-items-center">
    <nav id="pagingNav" aria-label="Page navigation example" class="pagination">
        <ul class="pagination justify-content-center">
            @foreach (var link in _links)
            {
                <li @onclick="() => OnSelectedPage(link)" style="cursor: pointer;" class="page-item @(link.Enabled ? null : "disabled") @(link.Active ? "active" : null)">
                    <span class="page-link" href="#">@link.Text</span>
                </li>
            }
        </ul>
    </nav>

    <p class="text-nowrap">
        Total Items: @Paging.TotalCount
    </p>
</div>
