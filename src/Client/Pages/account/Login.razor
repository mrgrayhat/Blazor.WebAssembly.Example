@page "/account/login"
<h3>Login</h3>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<EditForm Model="_userForAuthentication" OnValidSubmit="ExecuteLogin" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group row">
        <label for="username" class="col-md-2 col-form-label">Username/Email:</label>
        <div class="col-md-10">
            <InputText id="username" class="form-control" @bind-Value="_userForAuthentication.UsernameOrEmail" />
            <ValidationMessage For="@(() => _userForAuthentication.UsernameOrEmail)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputText type="password" id="password" class="form-control" @bind-Value="_userForAuthentication.Password" />
            <ValidationMessage For="@(() => _userForAuthentication.Password)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-md-2 col-form-label">Remember Me:</label>
        <div class="col-md-10">
            <InputCheckbox id="remembeme" @bind-Value="_userForAuthentication.RememberMe" />
        </div>
        <ValidationMessage For="@(() => _userForAuthentication.RememberMe)" />
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</EditForm>